<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FixedExpenditureActivity"
    tools:showIn="@layout/activity_manage_fixed_expenditure">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/amount"
        android:id="@+id/textView_fixedAmount"
        android:layout_below="@+id/textView_fixedExpenditureTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/details"
        android:id="@+id/textView_fixedDetails"
        android:layout_below="@+id/textView_fixedAmount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_alignRight="@+id/textView_fixedAmount"
        android:layout_alignEnd="@+id/textView_fixedAmount" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_fixedDetails"
        android:layout_alignBaseline="@+id/textView_fixedDetails"
        android:layout_alignLeft="@+id/textView_fixedExpenditureTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addData"
        android:id="@+id/button_addData"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/fixedExpenditure"
        android:id="@+id/textView_fixedExpenditureTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rtn"
        android:id="@+id/button_returnToManageData"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/button_addData"
        android:layout_alignEnd="@id/button_addData"
        android:layout_marginBottom="60dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_fixedExpense"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/textView_fixedAmount"
        android:layout_alignLeft="@+id/textView_fixedExpenditureTitle"
        android:layout_alignStart="@+id/textView_fixedExpenditureTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/remainingAmount"
        android:id="@+id/textView_remainingFixedExpenditure"
        android:layout_below="@id/button_addData"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_totalFixedExpenditureRemaining"
        android:layout_alignTop="@+id/textView_remainingFixedExpenditure"
        android:layout_toRightOf="@+id/textView_remainingFixedExpenditure" />

</RelativeLayout>
