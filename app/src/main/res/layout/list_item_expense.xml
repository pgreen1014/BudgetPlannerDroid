<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:background="@color/colorFadedBlue"
    android:layout_margin="1dp">

    <CheckBox
        android:id="@+id/check_box_delete_expense_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/text_view_list_item_expense_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/check_box_delete_expense_list_item"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="ExpenseAmount"/>

    <TextView
        android:id="@+id/text_view_list_item_expense_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_view_list_item_expense_amount"
        android:layout_below="@id/text_view_list_item_expense_amount"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Expense Category:"/>

    <TextView
        android:id="@+id/text_view_list_item_expense_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text_view_list_item_expense_category"
        android:layout_alignBaseline="@id/text_view_list_item_expense_category"
        android:padding="4dp"
        tools:text="Expense Details" />

</RelativeLayout>